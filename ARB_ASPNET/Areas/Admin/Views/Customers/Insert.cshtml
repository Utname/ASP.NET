@model Data.Entity.Customer

@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/Layout-admin.cshtml";
}

<h2>Insert</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            Insert Customer

            <a href="~/Admin/Customers/getAllList" style="float:right">Back</a>

        </h6>

    </div>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-12">Name</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Birthday</label>
            <div class="col-md-12">
                <input type="date" name="Birthday" class="form-control" value="@string.Format("{0:yyyy-MM-dd}",Model.Birthday)">
                @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Adrress</label>
            <div class="col-md-12">
                <select name="idAddress" class="form-control">
                    @foreach (var address in new Data.mapAddress().getAllAddress())
                    {
                        <option value="@address.Id">@address.Province</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.idAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Phone</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Year</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-12">Money</label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.Money, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Money, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-12">Adrress</label>
            <div class="col-md-12">
                <select name="Active" class="form-control">
                    <option value="true">Activity</option>
                    <option value="false">Clock</option>
                </select>
                @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

